config notifications 'notifications'
	option enabled 'false'
	option smtp_server 'smtp.example.com'
	option smtp_login 'user@example.com'
	option smtp_password 'MySecurePassword'
	option from 'Sucirata Monitor <user@example.com>'
	option to 'other_user@example.com'
	list ignore_regex '.*policy.*'
	option severity 100

config logger 'logger'
	option enabled 'no'
